        "contract-controls",
        "provenance",
        "tamper-evidence",
        "sbom"
      ],
      "rules": [
        {
          "id": "rule_sr3_001",
          "text": "Require suppliers to provide SBOM in CycloneDX or SPDX format for all software and hardware.",
