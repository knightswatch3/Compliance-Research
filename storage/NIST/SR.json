          "tags": [
            "tamper-evident",
            "hardware-custody"
          ]
        },
        {
          "id": "rule_sr3_003",
          "text": "Verify component provenance and authenticity using manufacturer certificates and secure boot.",
          "type": "configuration",
          "platform": "ALL",
          "tool": "UEFI Secure Boot, HSM, Intel SGX",
          "dependent_rule_ids": [
            "rule_sr3_001"
